#####################################
# Application menu handled by rofi: #
#####################################

# application menu 
bindsym $mod+d exec --no-startup-id rofi -modi drun -show drun -config ~/.config/rofi/rofiiconmenus.rasi

# window menu 
bindsym $mod+t exec --no-startup-id rofi -show window -config ~/.config/rofi/rofiiconlessmenus.rasi

# clipboard (install rofi-greenclip from the AUR)
exec --no-startup-id greenclip daemon>/dev/null
bindsym $mod+c exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard -config ~/.config/rofi/rofiiconlessmenus.rasi

# emoji picker (rofi-emoji) 
bindsym $mod+z exec --no-startup-id rofi -show emoji -config ~/.config/rofi/rofiiconlessmenus.rasi

# wifi menu 
bindsym $mod+Ctrl+w exec --no-startup-id ~/rofi-wifi-menu/rofi-wifi-menu.sh

